<%- include('../../parts/head', {bot, user, path}) %>
     <br><br>

<div class="container is-widescreen">
          <div class="columns is-tablet">
            <div class="column is-two-thirds">
            
          </div>
        </div>
      </div>

<div class="container">
  <br><br>
<div class="container contact-form bg-vote-disbots">
  <div class="contact-image">
      <i></i>
  </div>
  <form method="post" class="form-discorddark">
      <h3></h3>
     <div class="row">
          <div class="col-md-6">
              <div class="form-group">
                <h1 id="botlistitle">Staff Application</h1>
              <p class="has-text-white">Fill in the form below to submit a staff application.</p>
                <label> Reason<br></label>
                <br>
                <div class="form-group">
                  <select name="tags" id="tags" one required>
                    <% config.website.reporttags.map(a => {%>
                      <option value="<%= a %>"><%= a %></option>
                  <% }); %>
                  </select>
                </div>
              </div>
              <br>
              <div class="form-group">
                  <label>Please describe about yourself, and how can you help us?</label>
                  <textarea type="text" minlength="20" placeholder="Please include as much information as possible, including proof (e.g. screenshots and user IDs)" id="reason" name="reason" required="required" style="width: 100%;length: 100%;"></textarea>
                
                <br>
                <br>
                    <div class="form-group">
                  <label>Tell us about your previous experiences.</label>
                  <textarea type="text" minlength="20" placeholder="Please use grammar, and make sure your english is understandable." id="reason" name="reason" required="required" style="width: 100%;length: 100%;"></textarea>
            </div>
          </div>
      </div>
      <br><br><br><br>
      <div class="field">
  <strong><p style="color:red">Please make sure your staff application has enough details. If not, we may have to discard your request.</p></strong>
  <p>If we need more information, our moderators can DM you if you join the <a href="https://discord.gg/4zBB2tsXjH">support server</a>.</p>
  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required>
  <label class="form-check-label" for="flexCheckDefault" required>
    I have provided enough details.
  </label>
</div>
      <button type="submit" name="btnSubmit" class="btn btn-primary"><i class="fad fa-save"></i> Submit</button>
  </form>
</div>
</div>
<br><br>
<script>
    var urlParams = new URLSearchParams(window.location.search);
    if(urlParams.has('success') && urlParams.get('success')){
    Swal.fire({
     icon: 'success',
     title: 'Succesfull',
     closeOnConfirm: false,
     text: urlParams.get('message'),
     footer: 'Copyright 2021 &copy townlist.xyz - All right reserved.'
    }).then((result) => {
  if (result.isConfirmed) {
    window.location.href = `https://townlist.xyz`;
  }
})
    }
    if(urlParams.has('error') && urlParams.get('error')){
    Swal.fire({
     icon: 'error',
     title: 'Error',
     text: urlParams.get('message'),
     footer: 'Copyright 2021 &copy townlist.xyz - All right reserved.'
    }).then((result) => {
  if (result.isConfirmed) {
    window.location.href = `/staffapp`;
  }    
})
    }
   </script>
